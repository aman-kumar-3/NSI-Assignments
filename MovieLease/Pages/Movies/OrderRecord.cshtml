@page
@model MovieLease.Pages.Movies.OrderRecordModel
@{
    ViewData["Title"] = "OrderRecord";
}

<h1>OrderRecord</h1>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="card mb-3 p-4">
                <h2>@Model.MovieRecord.MovieName</h2>
                <p>Is Lended to You for 7 Days To Confirm Click Checkout</p>
                <div>
                    <form method="post">
                        <button type="submit">CheckOut</button>
                    </form>
                    <a class="btn btn-primary" asp-page="/Movies/Index">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div>

