@page
@model MovieLease.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h1>Register</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" class="mt-3" asp-page-handler="OnPost">
    <input hidden asp-for="User.UserId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" row">
        <label asp-for="User.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.UserName" class="form-control" placeholder="" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" row">
        <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Email" class="form-control" placeholder="" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" row">
        <label asp-for="User.Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Password" type="password" class="form-control" placeholder="" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" row">
        <label asp-for="User.ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.ConfirmPassword" type="password" class="form-control" placeholder="" />
            <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

