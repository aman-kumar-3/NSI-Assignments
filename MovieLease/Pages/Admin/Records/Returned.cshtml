@page
@model MovieLease.Pages.Admin.Records.ReturnedModel
@{
    ViewData["Title"] = "Returned";
}

<h1>Returned</h1>
<div>
    <div class="row">
        <div class="col">
            <div>
                <a class="btn btn-primary" asp-page="/Index">Back</a>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Movie Name</th>
                        <th>User Name</th>
                        <th>Lend Date</th>
                        <th>Return Date</th>
                        <th>Actual Return Date</th>
                        <th>Price Paid</th>
                        <th>Status</th>

                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var record in Model.Records)
                    {
                        <tr>
                            <td>@record.Movie.MovieName</td>
                            <td>@record.User.UserName</td>
                            <td>@record.LendDate.ToShortDateString()</td>
                            <td>@record.ReturnDate.ToShortDateString()</td>
                            <td>@record.ActualReturnDate.ToShortDateString()</td>
                            <td>@record.Fine</td>
                            <td>@record.Status</td>
                        </tr>
                    }
                </tbody>
                


            </table>

        </div>
    </div>
</div>

