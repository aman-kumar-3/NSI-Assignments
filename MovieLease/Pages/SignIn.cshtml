@page
@model MovieLease.Pages.Users.SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<h2 class="text-center">Login</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" class="mt-3" asp-page-handler="OnPost">
            
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="form-group" row">
                <label asp-for="Login.UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Login.UserName" class="form-control" placeholder="" />
                    <span asp-validation-for="Login.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" row">
                <label asp-for="Login.Password" type="password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Login.Password" type="password" class="form-control" placeholder="" />
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group" row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Log In</button>
                    <a asp-page="/Index" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
        <div>
            <p> <span>@Model.Msg</span></p>
        </div>
    </div>

</div>
